# included file for haproxy configuration

frontend mail
# smtp
	bind :25,465,587
# imap
	bind :143,:993
#sieve
	bind :4190
	mode				tcp
	option				tcplog
	timeout client		60s
	default_backend		S_SERVICE[mail]

frontend rspamd
	bind :S_RSPAMD_PORT[controller]
	mode http
	option			httplog
	default_backend	rspamd
