# included file for haproxy configuration

listen stats
	bind			*:_HPX_STATS_PORT

	log				global
	mode			http
	maxconn		10

	option			contstats

	#stats			scope . # . for only this section
	stats			enable
	stats			hide-version
	stats			refresh 5s
	stats			show-node
	stats			auth _HPX_ACCESS_USER:_HPX_ACCESS_PWD
	stats			uri _HPX_ACCESS_URI
