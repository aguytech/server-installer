# included file for haproxy configuration

listen stats
	bind			*:S_HAPROXY_STATS_PORT

	log				global
	mode			http
	maxconn		10

	option			contstats

	#stats			scope . # . for only this section
	stats			enable
	stats			hide-version
	stats			refresh 5s
	stats			show-node
	stats			auth _HP_ACCESS_USER:_HP_ACCESS_PWD
	stats			uri _HP_ACCESS_URI
