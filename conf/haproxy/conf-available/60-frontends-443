	#redirect	prefix	https://info.otokoz.ovh code 301 if { hdr(host) -i info.S_DOMAIN_FQDN_FQDN }

	use_backend				S_DOMAIN_FQDN_NAME-admin if S_DOMAIN_FQDN_NAME-admin
