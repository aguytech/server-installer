# AMBAU
# included file for haproxy configuration

frontend	_MYDOMAIN_FQDN:443
	bind	_MYDOMAIN_FQDN:443 ssl crt-list /etc/server/ssl/private/letsencrypt.pem.lst

	default_backend		default

	http-request				set-header X-Forwarded-Protocol https
	#http-request				set-header X-Forwarded-Port %[dst_port]

	acl _MYDOMAIN_NAME					hdr_end(host) -i _MYDOMAIN_FQDN
	acl wigwam					hdr(host) -i cloud.wigwam.bzh cloud.coworking-lannion.org
	acl 17112018				hdr_end(host) -i 17112018.fr

	acl _MYDOMAIN_NAME-admin		hdr(host) admin._MYDOMAIN_FQDN matomo._MYDOMAIN_FQDN monitor._MYDOMAIN_FQDN pfa._MYDOMAIN_FQDN pma._MYDOMAIN_FQDN

	#acl 17112018-admin	hdr(host) admin.17112018.fr matomo.17112018.fr monitor.17112018.fr pfa.17112018.fr pma.17112018.fr
	#acl letsencrypt	path_beg /.well-known/acme-challenge/
	#acl admin-dev		src 92.154.29.60 129.20.228.3 129.20.228.19 129.20.228.20 129.20.228.21

	#redirect	prefix	https://info.otokoz.ovh code 301 if { hdr(host) -i info._MYDOMAIN_FQDN }

	use_backend				_MYDOMAIN_NAME-admin if _MYDOMAIN_NAME-admin
	#use_backend			_MYDOMAIN_NAME-admin if _MYDOMAIN_NAME-admin or 17112018-admin
	use_backend				_MYDOMAIN_NAME if _MYDOMAIN_NAME
	#use_backend			_MYDOMAIN_NAME if { hdr_end(host) -i _MYDOMAIN_FQDN }
	#use_backend			_MYDOMAIN_NAME-test if _MYDOMAIN_NAME-test
	use_backend				17112018 if 17112018
	use_backend				wigwam if wigwam
	#use_backend			17112018 if 17112018
	#use_backend			letsencrypt if letsencrypt
	#use_backend			_MYDOMAIN_NAME-dev if admin-dev
