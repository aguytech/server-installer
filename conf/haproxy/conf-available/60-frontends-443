	acl letsencrypt		path_beg /.well-known/acme-challenge/

	#acl _HPX_DOMAIN_2_NAME-admin	hdr(host) admin._HPX_DOMAIN_2_FQDN matomo._HPX_DOMAIN_2_FQDN monitor._HPX_DOMAIN_2_FQDN pfa._HPX_DOMAIN_2_FQDN pma._HPX_DOMAIN_2_FQDN
	#acl admin-dev		src 92.154.29.60 129.20.228.3 129.20.228.19 129.20.228.20 129.20.228.21

	#redirect	prefix	https://info.otokoz.ovh code 301 if { hdr(host) -i info.S_DOMAIN_FQDN }

	#use_backend				S_DOMAIN_NAME-admin if S_DOMAIN_NAME-admin
	#use_backend			S_DOMAIN_NAME-admin if S_DOMAIN_NAME-admin or _HPX_DOMAIN_2_NAME-admin
	use_backend				S_DOMAIN_NAME if S_DOMAIN_NAME
	#use_backend			S_DOMAIN_NAME if { hdr_end(host) -i S_DOMAIN_FQDN }
	#use_backend			S_DOMAIN_NAME-test if S_DOMAIN_NAME-test
	use_backend				_HPX_DOMAIN_2_NAME if _HPX_DOMAIN_2_NAME
	#use_backend				wigwam if wigwam
	use_backend			letsencrypt if letsencrypt
