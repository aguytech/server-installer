# included file for haproxy configuration

backend _RDS_PROXY-redis
	mode tcp
	balance first
	default-server	maxconn 256 check inter 1s  fall 1  rise 1  resolvers lxd  resolve-prefer ipv4 # resolve-net 10.0.0.1/24

	option tcp-check
	tcp-check send info\ replication\r\n
	tcp-check expect string role:master

	server _RDS_CT_NAME-1 _RDS_CT_NAME-1:S_CACHE_PORT
	server _RDS_CT_NAME-2 _RDS_CT_NAME-2:S_CACHE_PORT

backend _RDS_PROXY-redis_read
	mode tcp
	balance roundrobin
	default-server	maxconn 256 check inter 1s  fall 1  rise 1  resolvers lxd  resolve-prefer ipv4 # resolve-net 10.0.0.1/24

	option tcp-check
	tcp-check send PING\r\n
	tcp-check expect string +PONG

	server _RDS_CT_NAME-1 _RDS_CT_NAME-1:S_CACHE_PORT
	server _RDS_CT_NAME-2 _RDS_CT_NAME-2:S_CACHE_PORT
