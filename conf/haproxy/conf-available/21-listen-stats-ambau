# included file for haproxy configuration

listen stats-S_DOMAIN_NAME
	bind			*:S_HAPROXY_STATS_PORT

	log				global
	mode			http
	maxconn		10

	option			contstats

	#stats			scope . # . for only this section
	stats			scope S_DOMAIN_FQDN:80
	stats			scope S_DOMAIN_FQDN:443
	stats			scope S_DOMAIN_NAME
	#stats			scope S_DOMAIN_NAME-admin
	stats			enable
	stats			hide-version
	stats			refresh 5s
	stats			show-node
	stats			auth _ACCESS_USER:_ACCESS_PWD
	stats			uri _ACCESS_URI
