# included file for haproxy configuration

listen stats-S_DOMAIN_FQDN
	bind			*:_HPX_STATS_2_PORT

	log				global
	mode			http
	maxconn		5

	option			contstats

	#stats			scope . # . for only this section
	stats			scope S_DOMAIN_FQDN:80
	stats			scope S_DOMAIN_FQDN:443
	stats			scope S_DOMAIN_FQDN
	#stats			scope admin
	stats			enable
	stats			hide-version
	stats			refresh 5s
	stats			show-node
	stats			show-legends
	stats			show-modules
	stats			auth _HPX_ACCESS_USER:_HPX_ACCESS_PWD
	stats			uri _HPX_ACCESS_URI
