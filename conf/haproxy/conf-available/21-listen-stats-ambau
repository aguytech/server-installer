# included file for haproxy configuration

listen stats-_DOMAIN_NAME
	bind			*:1778

	log				global
	mode			http
	maxconn		10

	option			contstats

	#stats			scope . # . for only this section
	stats			scope _DOMAIN_FQDN:80
	stats			scope _DOMAIN_FQDN:443
	stats			scope _DOMAIN_NAME
	#stats			scope admin
	stats			enable
	stats			hide-version
	stats			refresh 5s
	stats			show-node
	stats			auth _ACCESS_USER:_ACCESS_PWD
	stats			uri _ACCESS_URI
