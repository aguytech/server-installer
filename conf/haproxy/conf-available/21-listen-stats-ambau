# AMBAU
# included file for haproxy configuration

listen stats-_MYDOMAIN_NAME
	bind			*:1778

	log				global
	mode			http
	maxconn		10

	option			contstats

	#stats			scope . # . for only this section
	stats			scope _MYDOMAIN_FQDN:80
	stats			scope _MYDOMAIN_FQDN:443
	stats			scope _MYDOMAIN_NAME
	#stats			scope _MYDOMAIN_NAME-admin
	stats			enable
	stats			hide-version
	stats			refresh 5s
	stats			show-node
	stats			auth admin:ANVo87zj0m-HQ5
	stats			uri /haproxy-stats
