# included file for haproxy configuration

backend S_SERVICE[mail]
	mode			tcp
	timeout server	60s
	timeout connect	7s

	option smtpchk
	default-server	check port 80  inter 4s  fall 2  rise 1  resolvers lxd  resolve-prefer ipv4 # resolve-net 10.0.0.1/24
	#server S_SERVICE[mail]	S_SERVICE[mail] check port 25

backend rspamd
	mode			http
	#server			S_SERVICE[mail]	S_SERVICE[mail] check port S_RSPAMD_PORT[controller]

