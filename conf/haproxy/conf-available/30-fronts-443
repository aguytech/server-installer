# included file for haproxy configuration

frontend https
	bind :443			ssl crt-list _HPX_PATH_SSL/certbot.pem.lst
	#bind :443			ssl crt ambau.ovh.pem
	mode http
	option				httplog
	option				forwardfor except 127.0.0.0/8
	http-request		set-header X-Forwarded-Protocol https
	#http-request		set-header X-Forwarded-Port %[dst_port]
	default_backend		default

	acl _APA_DOM_FQDN		hdr_end(host) -i _APA_DOM_FQDN
	acl admin-_APA_DOM_FQDN	hdr(host) admin._APA_DOM_FQDN matomo._APA_DOM_FQDN monitor._APA_DOM_FQDN pfa._APA_DOM_FQDN pma._APA_DOM_FQDN
	#acl cloud-_APA_DOM_FQDN	hdr(host) cloud._APA_DOM_FQDN nextcloud._APA_DOM_FQDN

	#acl admin-dev		src 92.154.29.60 129.20.228.3 129.20.228.19 129.20.228.20 129.20.228.21

	#redirect  prefix  https://info.otokoz.ovh code 301 if { hdr(host) -i info._APA_DOM_FQDN }

	use_backend		admin-_APA_DOM_FQDN if admin-_APA_DOM_FQDN
	#use_backend		cloud-_APA_DOM_FQDN if cloud-_APA_DOM_FQDN
	use_backend		_APA_DOM_FQDN if _APA_DOM_FQDN
	#use_backend		_APA_DOM_FQDN if { hdr_end(host) -i _APA_DOM_FQDN }
