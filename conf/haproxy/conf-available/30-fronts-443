# included file for haproxy configuration

frontend https
	bind :443			ssl crt-list _HPX_PATH_SSL/certbot.pem.lst
	#bind :443			ssl crt ambau.ovh.pem
	mode http
	option				httplog
	option				forwardfor except 127.0.0.0/8
	http-request		set-header X-Forwarded-Protocol https
	#http-request		set-header X-Forwarded-Port %[dst_port]
	default_backend		default

	acl S_DOM_FQDN		hdr_end(host) -i S_DOM_FQDN
	acl S_DOM_FQDN-admin	hdr(host) admin.S_DOM_FQDN matomo.S_DOM_FQDN monitor.S_DOM_FQDN pfa.S_DOM_FQDN pma.S_DOM_FQDN
	#acl S_DOM_FQDN-cloud	hdr(host) cloud.S_DOM_FQDN nextcloud.S_DOM_FQDN

	#acl admin-dev		src 92.154.29.60 129.20.228.3 129.20.228.19 129.20.228.20 129.20.228.21

	#redirect  prefix  https://info.otokoz.ovh code 301 if { hdr(host) -i info.S_DOM_FQDN }

	use_backend		S_DOM_FQDN-admin if S_DOM_FQDN-admin
	#use_backend		S_DOM_FQDN-cloud if S_DOM_FQDN-cloud
	use_backend		S_DOM_FQDN if S_DOM_FQDN
	#use_backend		S_DOM_FQDN if { hdr_end(host) -i S_DOM_FQDN }
