S_PATH_LOG/apache2/*.emerg
S_PATH_LOG/apache2/*.err
S_PATH_LOG/apache2/*.warning
S_PATH_LOG/apache2/*.info
S_PATH_LOG/apache2/*.notice {
	daily
	rotate 2
	missingok
	compress
	delaycompress
	notifempty
    create 640 root adm
    postrotate
    	/etc/init.d/apache2 --quiet --ifstarted reload > /dev/null 2>/dev/null || true
    endscript
}