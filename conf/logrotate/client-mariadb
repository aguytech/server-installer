S_PATH_LOG/mysql/*.emerg
S_PATH_LOG/mysql/*.err
S_PATH_LOG/mysql/*.warn
S_PATH_LOG/mysql/*.info
S_PATH_LOG/mysql/*.notice {
	daily
	rotate 2
	missingok
	compress
	delaycompress
	notifempty
	sharedscripts
	postrotate
		/etc/init.d/rsyslog --quiet --ifstarted reload > /dev/null 2>/dev/null || true
	endscript
}