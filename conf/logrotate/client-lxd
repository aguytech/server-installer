S_PATH_LOG/lxd/*.warning
S_PATH_LOG/lxd/*.notice
S_PATH_LOG/lxd/*.info {
	daily
	rotate 14
	missingok
	compress
	delaycompress
	notifempty
	sharedscripts
	postrotate
		/etc/init.d/rsyslog --quiet --ifstarted reload > /dev/null 2>/dev/null || true
	endscript
}
